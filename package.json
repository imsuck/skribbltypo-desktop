{
  "name": "skribbltypo-desktop",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "start": "vite",
    "build": "NODE_ENV=production vite build",
    "app:dir": "NODE_ENV=production vite build && NODE_ENV=production electron-builder --dir",
    "app:dist": "NODE_ENV=production vite build && NODE_ENV=production electron-builder"
  },
  "build": {
    "npmArgs": [
      "--production"
    ],
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asar": {
      "smartUnpack": false
    },
    "electronLanguages": [
      "en-US"
    ],
    "npmRebuild": true,
    "nodeGypRebuild": false,
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "appImage": {
      "description": "Desktop client for skribbl.io (along with skribbltypo)"
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0"
  }
}